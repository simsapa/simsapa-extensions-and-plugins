{
    "manifest_version": 3,
    "name": "Simsapa",
    "version": "0.5.0",
    "author": "Gambhiro",
    "description": "Simsapa",
    "browser_specific_settings": {
        "gecko": {
            "id": "{2d17d681-5c76-4b43-8a18-ce406c3b962e}"
        }
    },
    "icons": {
        "48": "icons/simsapa-48.png"
    },
    "action": {
        "default_icon": {
            "48": "icons/simsapa-48.png"
        },
        "default_title": "Simsapa Sidebar"
    },

    "background": {
        "scripts": ["background-firefox.js"]
    },
    "sidebar_action": {
        "default_icon": "icons/simsapa-48.png",
        "default_title": "Simsapa",
        "default_panel": "sidebar.html",
        "browser_style": false,
        "open_at_install": false
    },

    "content_scripts": [
        {
            "matches": ["*://docs.google.com/*"],
            "css": ["docs-user-style.css"]
        },
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ],
    "permissions": [
        "activeTab"
    ],
    "commands": {
        "toggle": {
            "suggested_key": {
                "default": "Alt+Shift+D"
            },
            "description": "__MSG_toggle_extension__"
        }
    }
}
