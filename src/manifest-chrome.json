{
    "manifest_version": 3,
    "name": "Simsapa",
    "version": "0.1.0",
    "author": "Gambhiro",
    "description": "Simsapa",
    "icons": {
        "48": "icons/simsapa-48.png"
    },
    "action": {
        "default_title": "Simsapa Sidebar"
    },

    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidebar.html"
    },

    "content_scripts": [
        {
            "matches": ["*://docs.google.com/*"],
            "css": ["docs-user-style.css"]
        }
    ],
    "permissions": [
        "sidePanel",
        "activeTab"
    ],
    "commands": {
        "toggle": {
            "suggested_key": {
                "default": "Alt+Shift+D"
            },
            "description": "__MSG_toggle_extension__"
        }
    }
}
